{
    "metadata": {
        "schema_version": "1.0.1",
        "module_name": "linker",
        "description": "HOMESERVER linker script suite update system via GitHub",
        "enabled": true
    },
    "config": {
        "repository": {
            "url": "https://github.com/homeserversltd/linker.git",
            "branch": "master",
            "temp_directory": "/tmp/homeserver-linker-update"
        },
        "target_paths": {
            "base_directory": "/usr/local/bin",
            "components": {
                "scripts": {
                    "enabled": true,
                    "source_path": "linker",
                    "target_path": "/usr/local/bin/linker",
                    "description": "Linker TUI executable script"
                },
                "config": {
                    "enabled": true,
                    "source_path": "config.py",
                    "target_path": "/etc/homeserver/linker/config.py",
                    "description": "Linker configuration file"
                }
            }
        }
    }
} 