{
    "metadata": {
        "schema_version": "0.1.19",
        "content_version": "0.9.0",
        "module_name": "website",
        "description": "HOMESERVER website frontend/backend update system via GitHub with version checking",
        "enabled": true
    },
    "config": {
        "repository": {
            "url": "https://github.com/homeserversltd/website.git",
            "branch": "master",
            "temp_directory": "/tmp/homeserver-website-update"
        },
        "version_checking": {
            "enabled": true,
            "content_version_file": "src/config/homeserver.json",
            "content_version_path": "global.version.version",
            "require_content_update": false,
            "check_both_versions": true
        },
        "target_paths": {
            "base_directory": "/var/www/homeserver",
            "components": {
                "frontend": {
                    "enabled": true,
                    "source_path": "src",
                    "target_path": "/var/www/homeserver/src",
                    "description": "React frontend components and assets"
                },
                "backend": {
                    "enabled": true,
                    "source_path": "backend",
                    "target_path": "/var/www/homeserver/backend",
                    "description": "Flask backend API and services"
                },
                "premium": {
                    "enabled": true,
                    "source_path": "premium",
                    "target_path": "/var/www/homeserver/premium",
                    "description": "Premium features and functionality"
                },
                "public": {
                    "enabled": true,
                    "source_path": "public",
                    "target_path": "/var/www/homeserver/public",
                    "description": "Static public assets"
                },
                "flask_config": {
                    "enabled": true,
                    "source_path": "config.py",
                    "target_path": "/var/www/homeserver/config.py",
                    "description": "Flask configuration file"
                },
                "flask_main": {
                    "enabled": true,
                    "source_path": "main.py",
                    "target_path": "/var/www/homeserver/main.py",
                    "description": "Flask main application file"
                },
                "python_requirements": {
                    "enabled": true,
                    "source_path": "requirements.txt",
                    "target_path": "/var/www/homeserver/requirements.txt",
                    "description": "Python dependencies"
                },
                "typescript_config": {
                    "enabled": true,
                    "source_path": "tsconfig.json",
                    "target_path": "/var/www/homeserver/tsconfig.json",
                    "description": "TypeScript configuration"
                },
                "package_config": {
                    "enabled": true,
                    "source_path": "package.json",
                    "target_path": "/var/www/homeserver/package.json",
                    "description": "NPM package configuration"
                },
                "license": {
                    "enabled": true,
                    "source_path": "license",
                    "target_path": "/var/www/homeserver/license",
                    "description": "License file"
                }
            }
        }
    },
    "permissions": {
        "owner": "www-data",
        "group": "www-data",
        "directory_mode": "755",
        "file_mode": "644"
    }
}
