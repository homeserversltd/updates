{
    "metadata": {
        "schema_version": "0.1.6",
        "module_name": "gogs",
        "description": "Gogs Git server",
        "enabled": true
    },
    "config": {
        "directories": {
            "data_dir": {
                "path": "/var/lib/gogs",
                "mode": "755"
            },
            "config_dir": {
                "path": "/etc/gogs", 
                "mode": "755"
            },
            "install_dir": {
                "path": "/opt/gogs",
                "mode": "755"
            },
            "config_file": {
                "path": "/opt/gogs/custom/conf/app.ini",
                "mode": "640"
            },
            "repo_path": {
                "path": "/mnt/nas/git/repositories",
                "mode": "755"
            },
            "gogs_bin": {
                "path": "/opt/gogs/gogs",
                "owner": "root",
                "mode": "755"
            }
        },
        "installation": {
            "github_api_url": "https://api.github.com/repos/gogs/gogs/releases/latest",
            "binary_download_url_template": "https://github.com/gogs/gogs/releases/download/v{version}/gogs_{version}_linux_amd64.tar.gz",
            "source_repo_url": "https://github.com/gogs/gogs.git",
            "extract_path": "/opt/",
            "fallback_to_source": true
        },
        "permissions": {
            "group": "git",
            "owner": "git"
        }
    }
} 